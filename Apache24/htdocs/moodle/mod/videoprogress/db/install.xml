<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/videoprogress/db" VERSION="20241215" COMMENT="Video Progress module tables"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <!-- 主表：活動設定 -->
    <TABLE NAME="videoprogress" COMMENT="Video Progress activity instances">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Course ID"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Activity name"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Activity description"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="videotype" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="youtube" SEQUENCE="false" COMMENT="youtube, upload, or external"/>
        <FIELD NAME="videourl" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="YouTube URL"/>
        <FIELD NAME="externalurl" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="External iframe URL"/>
        <FIELD NAME="videoduration" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Video duration in seconds"/>
        <FIELD NAME="completionpercent" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="80" SEQUENCE="false" COMMENT="Completion threshold percentage"/>
        <FIELD NAME="externalmintime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="60" SEQUENCE="false" COMMENT="Minimum viewing time in seconds for external URLs"/>
        <FIELD NAME="requirefocus" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Require page focus to count progress (0=no, 1=yes)"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>

    <!-- 觀看區段記錄表 -->
    <TABLE NAME="videoprogress_segments" COMMENT="Watched video segments per user">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="videoprogress" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Activity ID"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID"/>
        <FIELD NAME="segmentstart" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Segment start time in seconds"/>
        <FIELD NAME="segmentend" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Segment end time in seconds"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="videoprogress" TYPE="foreign" FIELDS="videoprogress" REFTABLE="videoprogress" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="videoprogress_userid" UNIQUE="false" FIELDS="videoprogress,userid"/>
      </INDEXES>
    </TABLE>

    <!-- 使用者進度摘要表（方便快速查詢） -->
    <TABLE NAME="videoprogress_progress" COMMENT="User progress summary">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="videoprogress" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="watchedtime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Total watched time in seconds"/>
        <FIELD NAME="lastposition" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Last watched position for resume"/>
        <FIELD NAME="percentcomplete" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Completion percentage"/>
        <FIELD NAME="completed" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 if completed"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="videoprogress" TYPE="foreign" FIELDS="videoprogress" REFTABLE="videoprogress" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="videoprogress_userid" UNIQUE="true" FIELDS="videoprogress,userid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
